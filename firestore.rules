
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * WISHZEP SECURITY RULES
     *
     * CORE PHILOSOPHY:
     * This ruleset implements a strict path-based ownership model for user-specific data and a
     * role-based model for global application content.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isValidOwnershipCreate(uidField) {
      return request.resource.data[uidField] == request.auth.uid;
    }

    function isImmutable(field) {
      return request.resource.data[field] == resource.data[field];
    }

    // --- Collection Rules ---

    /**
     * @path /products/{productId}
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /categories/{categoryId}
     */
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /pages/{pageId}
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId) || isAdmin();
      allow delete: if false;

      match /cart_items/{cartItemId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId) || isAdmin();
      }

      match /orders/{orderId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && isValidOwnershipCreate('userId');
        allow update: if isAdmin() || (isExistingOwner(userId) && isImmutable('userId'));
        allow delete: if false;

        match /order_items/{orderItemId} {
          allow get, list: if isOwner(userId) || isAdmin();
          allow create: if isOwner(userId) || isAdmin();
          allow update, delete: if isAdmin();
        }
      }
    }

    /**
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create, update: if isOwner(userId); 
      allow delete: if false;
    }

    /**
     * Global access for admins to read across any order collections (Collection Group Support)
     */
    match /{path=**}/orders/{orderId} {
      allow read: if isAdmin();
    }
    match /{path=**}/order_items/{itemId} {
      allow read: if isAdmin();
    }
  }
}
