rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * WISHZEP SECURITY RULES
     *
     * CORE PHILOSOPHY:
     * This ruleset implements a strict path-based ownership model for user-specific data and a
     * role-based model for global application content.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isValidOwnershipCreate(uidField) {
      return request.resource.data[uidField] == request.auth.uid;
    }

    function isImmutable(field) {
      return request.resource.data[field] == resource.data[field];
    }

    // --- Collection Rules ---

    /**
     * @path /products/{productId}
     * @allow get, list: Public
     * @allow create, update, delete: Admin only
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /pages/{pageId}
     * @allow get, list: Public
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if false;

      match /cart_items/{cartItemId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /orders/{orderId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && isValidOwnershipCreate('userId');
        allow update: if isExistingOwner(userId) && isImmutable('userId');
        allow delete: if false;

        match /order_items/{orderItemId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId);
          allow update, delete: if false;
        }
      }
    }

    /**
     * @path /roles_admin/{userId}
     * @note Allow any signed-in user to 'get' a role document to check status.
     * @note Owners can create or update their own admin record in this prototype.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create, update: if isOwner(userId); 
      allow delete: if false;
    }
  }
}