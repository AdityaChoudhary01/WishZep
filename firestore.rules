
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * WISHZEP SECURITY RULES - PRODUCTION GRADE
     * Global Orders with role-based administrative visibility.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- Collection Rules ---

    /**
     * @path /products/{productId}
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /categories/{categoryId}
     */
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /pages/{pageId}
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;

      match /cart_items/{cartItemId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId) || isAdmin();
      }
    }

    /**
     * @path /orders/{orderId}
     * Root-level orders for administrative visibility and user history.
     */
    match /orders/{orderId} {
      // Allow users to list their own orders by filtering on userId, or admins to list all
      allow list: if isAdmin() || (isSignedIn() && request.query.limit <= 100 && request.auth.uid == resource.data.userId);
      
      // Allow individuals to see their own orders, or admins to see any
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if false;

      match /order_items/{orderItemId} {
        allow read: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid);
        allow create: if isSignedIn();
        allow update, delete: if isAdmin();
      }
    }

    /**
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn() && !exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)); // Allow first claim
      allow update: if isAdmin();
      allow delete: if false;
    }
  }
}
